<title><%= @hotel.title %> : ThrillPad : Travel Planning : Powerful Travel Planner</title>
<meta name="description" content="ThrillPad: Powerful Travel Planner, We help you build interesting trip & buy them <%= @hotel.description %>"/>
<meta name="keywords" content="<%= @hotel.title %>, India Tourism Travel, Book Flight Tickets, Unique Activities, Hotel Bookings, Restaurants in India, Powerful Travel Planner"/>
<ul class="breadcrumb" style="margin-top: 15px">
  <li>
    <a href="/">Home</a>
  </li>
  <li class="hidden-phone">
    <a href="/hotel/">Hotels</a>
  </li>

  <li class="visible-desktop-inline-block">
    <a href="/hotel/<%= @location.state.country.slug %>/<%= @location.state.slug %>/<%= @location.slug %>"><%= @location.title %></a>
  </li>

  <li class="active">
    <span><%= @hotel.title %></span>
  </li>
</ul>
<section class="section-wrapper post-w">
  <div class="container">
    <div class="row">
      <div class="span8">
        <div class="single-post-w">
          <h1 class="post-title"><%= @hotel.title %> </h1>

          <div class="post-info">

            <span class="info-item">
              in <a href="/locations/<%= @location.state.country.slug %>/<%= @location.state.slug %>/<%= @location.slug %>" title="<%= @location.slug %>">
              <span class="label label-warning"><i class="icon-location-arrow"></i>&nbsp;&nbsp;<%= @location.title %></span></a>
            </span>
          </div>
          <div class="single-post-image bottom decor-image">

          </div>
          <div class="post-content">
            <p><%= @hotel.description %></p>
          </div>
        </div>


      </div>
      <div class="span4">
        <div class="blog-side-bar">

          <div class="blog-flickr-widget widget-tp">
            <h3>Gallery</h3>
            <ul class="thumbnails">
              <li class="span2">
                <a class="thumbnail" data-rel="lightbox[gallery]" src="<%= @hotel.image1 %>" title="<%= @hotel.title %>">
                  <img alt="<%= @hotel.title %>" src="<%= @hotel.image1.thumb %>">
                </a>
              </li>
              <li class="span2">
                <a class="thumbnail" data-rel="lightbox[gallery]" src="<%= @hotel.image2 %>" title="<%= @hotel.title %>">
                  <img alt="<%= @hotel.title %>" src="<%= @hotel.image2.thumb %>">
                </a>
              </li>
              <li class="span2">
                <a class="thumbnail" data-rel="lightbox[gallery]" src="<%= @hotel.image3 %>" title="<%= @hotel.title %>">
                  <img alt="<%= @hotel.title %>" src="<%= @hotel.image3.thumb %>">
                </a>
              </li>
              <li class="span2">
                <a class="thumbnail" data-rel="lightbox[gallery]" src="<%= @hotel.image4 %>" title="<%= @hotel.title %>">
                  <img alt="<%= @hotel.title %>" src="<%= @hotel.image4.thumb %>">
                </a>
              </li>


            </ul>
          </div>
          <div class="blog-categories widget-tp">
            <h3>
              <i class="icon-th-list"></i>
              Other Hotels in <%= @location.title %>
            </h3>
            <ul>
              <% @location.hotels.each_with_index do |hotel, index| %>
                  <% if (index < 4) %>
                      <li>
                        <a href="/hotels/<%= hotel.slug %>  "><%= hotel.title %></a>
                      </li>
                  <% end %>

              <% end %>
              <a href="/hotel/<%= @location.state.country.slug %>/<%= @location.state.slug %>/<%= @location.slug %>" class="btn btn-small btn-primary">See
                all Hotels in <%= @location.title %></a>
            </ul>
          </div>


        </div>

      </div>
    </div>
  </div>
</section>