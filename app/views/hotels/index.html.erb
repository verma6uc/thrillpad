<h1>Listing hotels</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Image1</th>
    <th>Image2</th>
    <th>Image3</th>
    <th>Image4</th>
    <th>Description</th>
    <th>Address</th>
    <th>City</th>
    <th>Map</th>
    <th>Number of rooms</th>
    <th>Check out</th>
    <th>Hotel policies</th>
    <th>Slug</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.id %></td>
        <td><%= hotel.title %></td>
        <td><%= hotel.image1 %></td>
        <td><%= hotel.image2 %></td>
        <td><%= hotel.image3 %></td>
        <td><%= hotel.image4 %></td>
        <td><%= hotel.description %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.city_id %></td>
        <td><%= hotel.map %></td>
        <td><%= hotel.number_of_rooms %></td>
        <td><%= hotel.check_out %></td>
        <td><%= hotel.hotel_policies %></td>
        <td><%= hotel.slug %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

