<h1>Listing hotel_rooms</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Hotel</th>
    <th>Title</th>
    <th>Image1</th>
    <th>Image2</th>
    <th>Price</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @hotel_rooms.each do |hotel_room| %>
      <tr>
        <td><%= hotel_room.id %></td>
        <td><%= hotel_room.hotel_id %></td>
        <td><%= hotel_room.title %></td>
        <td><%= hotel_room.image1 %></td>
        <td><%= hotel_room.image2 %></td>
        <td><%= hotel_room.price %></td>
        <td><%= hotel_room.description %></td>
        <td><%= link_to 'Show', hotel_room %></td>
        <td><%= link_to 'Edit', edit_hotel_room_path(hotel_room) %></td>
        <td><%= link_to 'Destroy', hotel_room, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

